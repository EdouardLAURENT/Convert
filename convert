#!/bin/bash

#═══════════════════════════════════════════════════════════════
# Convert - Wrapper script
# Appelle le moteur de conversion stocké dans .convert/
#═══════════════════════════════════════════════════════════════

# Chemin vers le moteur
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ENGINE="${SCRIPT_DIR}/.convert/engine.sh"

# Vérifier que le moteur existe
if [ ! -f "$ENGINE" ]; then
    echo "❌ Erreur: Le moteur de conversion est introuvable"
    echo "   Attendu: $ENGINE"
    exit 1
fi

# Appeler le moteur avec tous les arguments
exec "$ENGINE" "$@"
