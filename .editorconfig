# EditorConfig pour maintenir la coh√©rence du code
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,markdown}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.{html,css,js}]
indent_style = space
indent_size = 2

[*.{sh,bash}]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.conf]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
